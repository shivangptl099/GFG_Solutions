class Solution {
  public:
    int findPlatform(vector<int>& arr, vector<int>& dep) {
        sort(arr.begin(), arr.end());
        sort(dep.begin(), dep.end());
        int count = 0, maxi = -1;
        int i = 0, j = 0;
        int n = arr.size();
        while(i < n && j < n ){
            if(arr[i] <= dep[j]){
                count++;
                i++;
            } else {
                count--;
                j++;
            }
            maxi = max(maxi, count);
        }
        maxi = max(maxi, count);
        return maxi;
    }
};
